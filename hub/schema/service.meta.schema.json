{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Service Meta",
  "description": "Schema for service.meta.yaml files in Context Hive",
  "type": "object",
  "required": ["name", "version", "dependencies"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Service name"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "owners": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Service owners/maintainers"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of document dependencies"
    },
    "docs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Service-specific documentation"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Service tags for categorization"
    },
    "tasks": {
      "type": "object",
      "description": "Task definitions",
      "patternProperties": {
        "^[a-z_][a-z0-9_]*$": {
          "type": "object",
          "required": ["documents"],
          "properties": {
            "documents": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1,
              "description": "Documents needed for this task"
            },
            "estimated_tokens": {
              "type": "integer",
              "minimum": 0,
              "description": "Estimated token count"
            },
            "priority": {
              "type": "string",
              "enum": ["low", "medium", "high", "critical"],
              "description": "Task priority"
            }
          },
          "additionalProperties": false
        }
      }
    }
  },
  "additionalProperties": false
}
